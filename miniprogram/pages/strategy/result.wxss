.container {
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.section {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.section-subtitle {
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #999;
}

.param-field {
  padding: 20rpx 24rpx !important;
}

.rules-list {
  height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  background: #fff;
}

.rules-list.show {
  height: auto;
  padding: 24rpx;
}

/* 评分规则部分 */
.rules-section {
  margin-bottom: 32rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
  margin-bottom: 8rpx;
}

.rule-index {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 20rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.rule-text {
  flex: 1;
  font-size: 22rpx;
  color: #333;
  line-height: 1.5;
}

.indicator-section {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.indicator-title {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid #07c160;
}

.indicator-list {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
}

.indicator-item {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
  padding: 4rpx 12rpx;
}

.indicator-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.indicator-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.stock-list {
  padding: 0 12rpx;
}

.stock-item {
  margin: 8rpx 0;
  border-radius: 8rpx;
  padding: 16rpx 24rpx !important;
}

.van-cell__title {
  font-size: 26rpx !important;
  font-weight: 500;
}

.van-cell__label {
  margin-top: 4rpx !important;
  color: #666 !important;
  font-size: 22rpx !important;
}

.loading {
  margin: 40rpx auto;
  text-align: center;
}

.rich-text {
  line-height: 1.4;
  font-size: 24rpx;
}

.stock-label {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
}

.score {
  color: #07c160;
  font-weight: 500;
}

.metric {
  color: #666;
}

.metric:not(:last-child)::after {
  content: '|';
  margin: 0 8rpx;
  color: #ddd;
}

.section-arrow {
  font-size: 24rpx;
  color: #999;
  transform: rotate(90deg);
  transition: transform 0.3s;
}

.arrow-up {
  transform: rotate(-90deg);
}

.metrics-desc {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
}

.desc-title {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.desc-item {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
  padding: 4rpx 0;
}

/* 策略说明样式 */
.strategy-desc {
  padding: 24rpx;
}

.strategy-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 12rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid #07c160;
}

.strategy-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
} 