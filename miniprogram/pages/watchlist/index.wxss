.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 32rpx;
}

.search-box {
  margin-bottom: 24rpx;
}

.suggestions {
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.watchlist {
  margin-bottom: 24rpx;
}

.delete-btn {
  width: 65px;
  height: 100%;
  background-color: #ee0a24;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.up {
  color: #f5222d !important;
}

.down {
  color: #52c41a !important;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 48rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

.stock-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.add-btn {
  margin-left: 16rpx !important;
  height: 48rpx !important;
  padding: 0 24rpx !important;
  font-size: 24rpx !important;
}

/* 阻止按钮点击事件冒泡 */
.add-btn {
  position: relative;
  z-index: 9;
} 