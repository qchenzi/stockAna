<view class="container">
  <van-grid column-num="3" border="{{ false }}">
    <van-grid-item 
      icon="star-o" 
      text="自选股" 
      bind:click="onWatchlistClick"
    />
    <van-grid-item 
      icon="fire-o"
      text="每日推荐" 
      bind:click="onRecommendationsClick"
    />
    <van-grid-item 
      icon="info-o" 
      text="个股详情" 
      bind:click="onStockInfoClick"
    />
    <van-grid-item 
      icon="chart-trending-o" 
      text="K线指标" 
      bind:click="onTechnicalClick"
    />
    <van-grid-item 
      icon="search" 
      text="策略选股" 
      bind:click="onStrategyClick"
    />
    <van-grid-item 
      icon="chat-o"
      text="AI分析" 
      bind:click="onAIAnalysisClick"
    />
  </van-grid>
</view> 