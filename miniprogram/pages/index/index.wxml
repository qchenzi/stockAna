<view class="page">
  <!-- 免责声明 -->
  <van-notice-bar
    wrapable
    scrollable="{{ false }}"
    text="本辅助工具提供的所有数据仅供参考，不构成任何投资建议，请结合业界股票分析软件使用。"
    background="#fefcec"
    color="#ed6a0c"
  />

  <!-- 功能导航 -->
  <van-grid column-num="3" border="{{ false }}">
    <van-grid-item 
      icon="star-o" 
      text="自选股" 
      bind:click="onWatchlistClick"
    />
    <van-grid-item 
      icon="fire-o"
      text="每日推荐" 
      bind:click="onTechnicalScoreClick"
    />
    <van-grid-item 
      icon="bar-chart-o"
      text="筹码选股" 
      bind:click="onChipAnalysisClick"
    />
    <van-grid-item 
      icon="info-o" 
      text="个股详情" 
      bind:click="onStockInfoClick"
    />
    <van-grid-item 
      icon="chart-trending-o" 
      text="K线指标" 
      bind:click="onTechnicalClick"
    />
    <van-grid-item 
      icon="search" 
      text="策略选股" 
      bind:click="onStrategyClick"
    />
    <van-grid-item 
      icon="chat-o"
      text="AI问答" 
      bind:click="onAIAnalysisClick"
    />
  </van-grid>
</view> 