.container {
  padding: 20rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.input-section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

.technical-section {
  margin-top: 30rpx;
}

.van-cell-group {
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.van-button {
  margin-top: 20rpx;
}

.stock-suggestions {
  position: fixed;
  top: 120rpx;
  left: 20rpx;
  right: 20rpx;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  z-index: 1000;
  border-radius: 8rpx;
  max-height: 80vh;
  overflow: hidden;
}

.suggestions-scroll {
  width: 100%;
  height: 100%;
}

.suggestion-item {
  padding: 24rpx;
  border-bottom: 1px solid #eee;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.stock-code {
  color: #333;
  font-weight: 500;
  min-width: 120rpx;
}

.stock-name {
  color: #666;
  flex: 1;
  text-align: right;
  margin-left: 20rpx;
} 