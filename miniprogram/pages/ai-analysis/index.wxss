.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 32rpx;
}

.search-box {
  background: white;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.stock-search {
  margin: 0 !important;
  padding: 0 !important;
}

.stock-search .van-search__content {
  border-radius: 8rpx !important;
  height: 88rpx !important;
}

.date-picker {
  padding: 0 !important;
  background: #f7f8fa !important;
  border-radius: 8rpx !important;
}

.date-picker .van-field__input-wrap {
  height: 88rpx !important;
}

.date-picker .van-field__body {
  padding: 0 32rpx !important;
}

.date-picker .van-field__right-icon {
  padding-right: 24rpx !important;
  color: #07c160 !important;
}

.button-group {
  margin-top: 48rpx;
}

.analyze-btn {
  height: 96rpx !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  letter-spacing: 4rpx !important;
  border-radius: 48rpx !important;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.2) !important;
}

/* 日期选择器样式 */
.van-calendar {
  --calendar-background-color: white !important;
  --calendar-selected-day-background-color: #07c160 !important;
  --calendar-selected-day-color: white !important;
}

.van-calendar__header {
  box-shadow: none !important;
}

.van-calendar__header-title {
  font-size: 32rpx !important;
  font-weight: normal !important;
  color: #333 !important;
}

.van-calendar__month-title {
  font-size: 28rpx !important;
  font-weight: normal !important;
  color: #333 !important;
}

.van-calendar__day {
  font-size: 28rpx !important;
  width: 64rpx !important;
  height: 64rpx !important;
  margin: 0 auto !important;
  border-radius: 4rpx !important;
}

.van-calendar__selected-day {
  width: 64rpx !important;
  height: 64rpx !important;
  background: #07c160 !important;
  border-radius: 4rpx !important;
}

.van-calendar__day--disabled {
  color: #ccc !important;
  background: transparent !important;
}

.van-calendar__confirm {
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-size: 32rpx !important;
  color: white !important;
  background: #07c160 !important;
  border-radius: 0 !important;
  margin: 0 !important;
}

/* 建议列表样式 */
.suggestions {
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.van-cell {
  padding: 28rpx 32rpx !important;
}

.van-cell__title {
  font-size: 30rpx !important;
  font-weight: 500 !important;
}

.van-cell__label {
  font-size: 26rpx !important;
  margin-top: 8rpx !important;
}

/* 空状态样式 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 48rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 分析结果样式 */
.analysis-result {
  margin-top: 24rpx;
}

.result-group {
  border-radius: 16rpx;
  overflow: hidden;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.details-cell {
  padding: 32rpx !important;
}

.details-cell .van-cell__label {
  margin-top: 16rpx !important;
  font-size: 28rpx !important;
  line-height: 1.6 !important;
  white-space: pre-wrap !important;
}

/* 在现有样式的基础上添加 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 16rpx;
  padding: 0 32rpx;
} 