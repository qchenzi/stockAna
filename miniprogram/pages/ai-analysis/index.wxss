.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #f7f8fa;
}

/* 搜索区域样式 */
.search-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 24rpx;
}

.search-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.custom-search {
  flex: 2;
  margin-right: 16rpx !important;
  padding: 0 !important;
}

.date-field {
  flex: 1;
  background: #f7f8fa !important;
  border-radius: 8rpx !important;
  padding: 8rpx 16rpx !important;
}

.date-field .van-field__label {
  color: #646566 !important;
  font-size: 28rpx !important;
}

.date-field .van-field__input {
  text-align: right !important;
  color: #323233 !important;
}

/* 日期选择器样式 */
.van-datetime-picker {
  --picker-option-font-size: 32rpx !important;
  --picker-toolbar-height: 96rpx !important;
}

.van-datetime-picker__title {
  font-weight: 500 !important;
  font-size: 32rpx !important;
}

.analyze-btn {
  width: 100% !important;
  height: 80rpx !important;
  border-radius: 40rpx !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
}

/* 建议列表样式 */
.suggestions-list {
  margin-bottom: 24rpx;
}

.custom-cell-group {
  border-radius: 16rpx !important;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.suggestion-cell {
  padding: 24rpx !important;
}

/* 分析结果区域样式 */
.analysis-content {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.analysis-header {
  padding: 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #0bab56 100%);
  color: #fff;
}

.header-info {
  margin-bottom: 24rpx;
}

.header-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-date {
  font-size: 26rpx;
  opacity: 0.9;
}

.stock-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stock-name {
  font-size: 32rpx;
  font-weight: 500;
}

.stock-code {
  font-size: 28rpx;
  opacity: 0.9;
}

.analysis-body {
  padding: 24rpx;
}

.analysis-body rich-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.analysis-body strong {
  display: block;
  color: #07c160;
  font-size: 32rpx;
  font-weight: 500;
  margin: 32rpx 0 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #07c160;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 280rpx;
  height: 280rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 列表项动效 */
.suggestion-cell {
  transition: all 0.3s ease;
}

.suggestion-cell:active {
  background: #f9f9f9;
}

/* 日期选择器样式 */
.van-calendar {
  --calendar-height: 618rpx;
  background-color: #fff;
}

.van-popup {
  max-height: 80vh;
}

/* 修改日期选择器的标题样式 */
.van-calendar__header {
  box-shadow: none;
}

/* 修改日期选择器的日期样式 */
.van-calendar__day {
  margin-bottom: 4px;
}

.van-calendar__selected-day {
  background-color: #07c160 !important;
  color: #fff;
}

/* 主要结论样式 */
.main-conclusion {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.conclusion-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.conclusion-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.conclusion-item .value {
  font-size: 32rpx;
  font-weight: bold;
}

.bullish { color: #f56c6c; }
.bearish { color: #07c160; }
.neutral { color: #909399; }

.signal-买入 { color: #f56c6c; }
.signal-卖出 { color: #07c160; }
.signal-观望 { color: #909399; }

/* 分析部分样式 */
.analysis-section {
  margin-bottom: 32rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
  padding: 24rpx;
  border-bottom: 1px solid #eee;
}

.section-content {
  padding: 24rpx;
}

.analysis-item {
  margin-bottom: 24rpx;
}

.analysis-item:last-child {
  margin-bottom: 0;
}

.analysis-item .analysis-item {
  margin-left: 24rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #f0f0f0;
}

.item-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.item-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 嵌套内容的样式 */
.nested-content {
  margin-left: 24rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #f0f0f0;
}

/* 条件项的样式 */
.condition-item {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.condition-item:first-child {
  margin-top: 0;
}

/* 强调文本样式 */
.highlight-text {
  color: #07c160;
  font-weight: 500;
}

/* 数值文本样式 */
.number-text {
  color: #f56c6c;
  font-family: monospace;
} 